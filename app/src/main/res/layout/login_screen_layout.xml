<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/colorDivider">

    <com.shobhitpuri.custombuttons.GoogleSignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="230dp"
        android:layout_height="75dp"
        android:layout_below="@id/rest_of_text_main_screen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="134dp"
        android:text="@string/google_sign_in"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_screen_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/greeting_text"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryText"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rest_of_text_main_screen"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/greeting_text_2"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryText"
        android:textSize="24dp"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/main_screen_logo"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/logojoblin_2"
        app:civ_border_width="2dp"
        app:civ_circle_background_color="@color/colorPrimaryLight"
        app:civ_border_color="@color/colorPrimaryLight"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/welcome_text"
        android:text="_" />


</RelativeLayout>