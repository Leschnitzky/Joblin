<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:id="@+id/rec_cardview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_5sdp"
    android:background="@color/DividerColor"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_2sdp"
    app:cardElevation="@dimen/_1sdp"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/slidingpanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        app:umanoPanelHeight="@dimen/_60sdp"
        app:umanoShadowHeight="@dimen/_5sdp">

        <LinearLayout
            android:id="@+id/CardLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/NamePhotoLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/DividerColor">

                <com.technion.android.joblin.SquareImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nameTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="name"
                        android:textColor="#000000"
                        android:textSize="@dimen/_25sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/workplaceTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="workplace"
                        android:textColor="#000000"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/distanceTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="3 km away"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.GridLayout
                android:id="@+id/detailsLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="3"
                app:columnCount="2"
                app:rowCount="2">

                <LinearLayout
                    android:id="@+id/posLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center"
                    app:layout_rowWeight="1">

                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/icon_business_64x64" />

                    <TextView
                        android:id="@+id/positionScopeTxt"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:text="position"
                        android:textColor="#000000"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="normal|bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/locLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center"
                    app:layout_rowWeight="1">

                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/icon_place_64x64" />

                    <TextView
                        android:id="@+id/locationNameTxt"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:text="location"
                        android:textColor="#000000"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="normal|bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/eduLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center"
                    app:layout_rowWeight="1">

                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/icon_school" />

                    <TextView
                        android:id="@+id/EducationTxt"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:ellipsize="middle"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="education"
                        android:textColor="#000000"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="normal|bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/skillsLayout"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center"
                    app:layout_rowWeight="1">

                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/icon_skill_64x64" />

                    <TextView
                        android:id="@+id/SkillsTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="skills"
                        android:textColor="#000000"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="normal|bold" />
                </LinearLayout>
            </android.support.v7.widget.GridLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/moreDescLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/moreButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/detailsImage"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:src="@drawable/icon_slide_up_48x48" />

                <TextView
                    android:id="@+id/moreDetailsTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/more_details"
                    android:textColor="#000000"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="normal|bold" />

            </LinearLayout>

            <android.support.v7.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center"
                app:columnCount="2"
                app:rowCount="2">

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:src="@drawable/icon_school"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center"
                    app:layout_rowWeight="1" />

                <TextView
                    android:id="@+id/fullEducationTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:ellipsize="middle"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="education"
                    android:textColor="#000000"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="normal|bold"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center"
                    app:layout_rowWeight="1" />

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/icon_skill_64x64"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center"
                    app:layout_rowWeight="1" />

                <TextView
                    android:id="@+id/fullSkillsTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="skills"
                    android:textColor="#000000"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="normal|bold"
                    app:layout_columnWeight="1"
                    app:layout_gravity="center"
                    app:layout_rowWeight="1" />

            </android.support.v7.widget.GridLayout>

            <TextView
                android:id="@+id/aboutTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:text="About The Job:"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descriptionTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:lines="7"
                android:padding="@dimen/_10sdp"
                android:text="description"
                android:textColor="#000000"
                android:textSize="@dimen/_15sdp"
                android:textStyle="normal|bold" />

        </LinearLayout>

    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
</android.support.v7.widget.CardView>

