<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecrEditActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_recr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimary"
        tools:targetApi="lollipop">

        <ImageView
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_person_black_36dp" />

        <ImageView
            android:id="@+id/recr_edit_back_button"
            android:layout_width="@dimen/_26sdp"
            android:layout_height="@dimen/_26sdp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:src="@drawable/logojoblin_64x64_green" />
    </android.support.v7.widget.Toolbar>


    <android.support.v7.widget.CardView
        android:id="@+id/recr_cardprofile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_background_recr"
        android:layout_below="@id/toolbar_recr"
        app:cardBackgroundColor="@color/colorPrimaryLight" />

    <ImageView
        android:id="@+id/bottom_background_recr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary" />

    <ImageView
        android:id="@+id/gearwheel_recr"
        android:layout_width="@dimen/_52sdp"
        android:layout_height="@dimen/_52sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_15sdp"
        android:src="@drawable/ic_settings_black_24dp" />

</RelativeLayout>