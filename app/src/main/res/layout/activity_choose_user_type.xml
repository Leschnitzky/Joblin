<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorDivider"
    tools:context=".ChooseUserTypeActivity"
    android:gravity="center">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/main_screen_logo"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/logojoblin_2"
        app:civ_border_width="2dp"
        app:civ_circle_background_color="@color/colorPrimaryLight"
        app:civ_border_color="@color/colorPrimaryLight"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="@string/choose_one"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryText"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/candidate_button"
        android:layout_margin="5dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:textColor="@color/colorTextOrIcons"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="@string/proceed_as_cand"/>

    <Button
        android:id="@+id/recruiter_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@color/colorAccent"
        android:text="@string/proceed_as_recr"
        android:textColor="@color/colorTextOrIcons"
        android:textStyle="bold" />

</LinearLayout>